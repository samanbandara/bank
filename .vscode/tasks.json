{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install backend deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"ci",
				"--prefix",
				"backend"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Start backend server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"start",
				"--prefix",
				"backend"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Install dotenv backend",
			"type": "shell",
			"command": "npm",
			"args": [
				"install",
				"dotenv",
				"--prefix",
				"backend"
			],
			"group": "build"
		},
		{
			"label": "Build frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build",
				"--prefix",
				"frontend"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		}
	]
}